# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Provider
LLM_PROVIDER=openrouter

# OpenRouter Model Selection
# Recommended models:
#   - meta-llama/llama-3.1-70b-instruct (fast, cheap, good quality)
#   - anthropic/claude-3.5-sonnet (best quality, more expensive)
#   - google/gemini-pro-1.5 (good balance)
#   - openai/gpt-4-turbo (high quality, expensive)
#   - mistralai/mixtral-8x7b-instruct (fast, cheap)
OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# Optional: App name for OpenRouter stats
OPENROUTER_APP_NAME=Auralie

# Simulation Settings
# Number of days to simulate the dating experience (default: 7)
SIMULATION_DAYS=7

# Enable/disable physical activities during simulation (default: true)
# Setting to false makes simulations much faster (~2-3 min instead of 5-8 min)
ENABLE_ACTIVITIES=false
